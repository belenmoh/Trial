<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.gym.controller.LoginController" 
      spacing="20" alignment="CENTER" 
      style="-fx-background-color: #f0f0f0; -fx-padding: 40;">
    
    <children>
        <Text text="Gym &amp; Fitness Center" 
              style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-fill: #2c3e50;"/>
        
        <VBox spacing="15" alignment="CENTER" style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 10;">
            <children>
                <Label text="Login" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-fill: #34495e;"/>
                
                <VBox spacing="5">
                    <Label text="Username:" style="-fx-font-size: 14px;"/>
                    <TextField fx:id="usernameField" promptText="Enter username" 
                               style="-fx-pref-width: 250px; -fx-pref-height: 35px;"/>
                </VBox>
                
                <VBox spacing="5">
                    <Label text="Password:" style="-fx-font-size: 14px;"/>
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <PasswordField fx:id="passwordField" promptText="Enter password" 
                                      style="-fx-pref-width: 200px; -fx-pref-height: 35px;"/>
                        <TextField fx:id="passwordTextField" promptText="Enter password" 
                                  visible="false" managed="false"
                                  style="-fx-pref-width: 200px; -fx-pref-height: 35px;"/>
                        <Button fx:id="showPasswordButton" text="ðŸ‘" onAction="#togglePassword"
                                style="-fx-pref-width: 40px; -fx-pref-height: 35px; -fx-font-size: 16px;"/>
                    </HBox>
                </VBox>
                
                <Button text="Login" onAction="#handleLogin" 
                        style="-fx-pref-width: 250px; -fx-pref-height: 40px; -fx-font-size: 16px; 
                               -fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;
                               -fx-background-radius: 5;"/>
                
                <Label fx:id="errorLabel" style="-fx-text-fill: #e74c3c; -fx-font-size: 12px;"/>
            </children>
        </VBox>
        
        <Text text="Â© 2024 Gym Management System" 
              style="-fx-font-size: 12px; -fx-fill: #7f8c8d;"/>
    </children>
</VBox>
